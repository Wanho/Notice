@using Notice.Model
@{
    var userModel = ViewData["_User"] as UserModel;
    string action = ViewContext.RouteData.Values["controller"] as string;
    string view = ViewContext.RouteData.Values["action"] as string;

    string isSiderbar = "";
    //if (ViewContext.HttpContext.Request.Cookies["IsSidebar"] != null)
    //{
    //    isSiderbar = ViewContext.HttpContext.Request.Cookies["IsSidebar"].Value;
    //}
}

<script>
    $(document).ready(function () {
        if ("@isSiderbar" == "toggled") {
            $("body").toggleClass("sidebar-toggled");
            $('.collapse').collapse('hide');
        }
    });
</script>

<ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion @isSiderbar" id="accordionSidebar">
    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
        <div class="sidebar-brand-icon">
            <i class="fas fa-window-restore"></i>
        </div>
        <div class="sidebar-brand-text mx-3">공지시스템</div>
    </a>
    <!-- Divider -->
    <hr class="sidebar-divider my-0" />
    <!-- Nav Item - Dashboard -->
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Logout", "Frame")">
            <i class="fas fa-sign-out-alt"></i>
            <span>@userModel.UserName</span>
        </a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item @(action == "Notice" ? "active" : "")">
        <a class="nav-link @(action == "Notice" ? "" : "collapsed")" id="LnbNotice" href="#" data-toggle="collapse" data-target="#collapseNotice" aria-expanded="@(action == "Notice" ? "false" : "true")" aria-controls="collapseTwo">
            <i class="fas fa-fw fa-window-restore"></i>
            <span>공지사항</span>
        </a>
        <div id="collapseNotice" class="collapse @(action == "Notice" ? "show" : "")" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                <a class="collapse-item @(view == "Board" ? "active": "")" href="@Url.Action("Board", "Notice")">목록</a>
                <a class="collapse-item @(view == "Write" ? "active": "")" href="@Url.Action("Write", "Notice")">등록</a>
            </div>
        </div>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Item - Utilities Collapse Menu -->
    <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
            <i class="fas fa-fw fa-wrench"></i>
            <span>권한</span>
        </a>
        <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                <a class="collapse-item" href="#">목록</a>
                <a class="collapse-item" href="#">등록</a>
            </div>
        </div>
    </li>

    <hr class="sidebar-divider d-none d-md-block">

    <!-- Sidebar Toggler (Sidebar) -->
    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>

</ul>